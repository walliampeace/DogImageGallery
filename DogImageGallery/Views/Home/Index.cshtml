@model GalleryIndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <h1 class="font-weight-light text-center mt-4 mb-0">Welcome to the Dog Image Gallery</h1>
    <p class="text-center">Your images hosted on Azure</p>

    <hr class="mt-2 mb-5">

    <div class="row">

        <h3 class="text-center text-lg-left font-weight-light mt-0 mb-1 pl-5">Recent submissions:</h3>
        
        <div class="col-lg-12">
            <div class="container">
                <div class="row mt-4 justify-content-center">
                    @if (Model != null)
                    {
                        @foreach (var image in Model?.Images)
                        {
                            <div class="col-md-3 col-sm-12 col-12">
                                <div class="card mb-2">
                                    <a class="" asp-controller="Gallery" asp-action="Detail" asp-route-id="@image?.Id">
                                        <img src="@image.Url" alt="Azure Cloud Hosted Image" title="@image.Title" class="card-img-top img-fluid img-thumbnail"
                                             style="width: 100%;height: 15rem;object-fit: cover;">
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title">@image.Title</h5>
                                        <p class="card-text">Uploaded on: @image.Created.ToString("d")</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-danger">No images uploaded to Azure yet...</p>
                    }
                </div>
            </div>
        </div>
        
        <div class="row controls">
            <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">To Gallery</a>
        </div>
    </div>
</div>
